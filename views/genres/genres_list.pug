extends ../layout

block content
    .container-fluid
        h1 List Books
            if (genres.length > 0 )
                table.table.table-striped.fs-6
                    thead 
                        tr 
                            th(scope="col") ID 
                            th(scope="col") Genre 
                    tbody
                        each genre in genres
                            tr 
                                th(scope="row")=genre.id
                                th(scope="row")=genre.name
            else 
                h1 Not Genres Available